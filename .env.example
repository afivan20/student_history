# Telegram Bot Configuration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_NAME=my_bot

# Admin Panel Security
# Сгенерируйте случайную строку: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_SECRET_KEY=generate_random_32_byte_string_here

# Database
DATABASE_URL=sqlite:///./student_history.db

# SSL Certificates (для production)
SSL_KEYFILE=/etc/letsencrypt/live/yourdomain.com/privkey.pem
SSL_CERTFILE=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
